{
  "compilerOptions": {
    "target": "es2015",
    "allowJs": false,
    "rootDir": ".",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": false,
    "types": [
      "node"
    ],
    "allowUnreachableCode": false,
    "typeRoots": [
      "./src",
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "src/**/*",
    "scripts/**/*"
  ]
}
